# Environment
NODE_ENV=development

# Server Configuration
PORT=3000
FRONTEND_URL=http://localhost:5173

# OpenAI API Configuration
# OPENAI_API_KEY=your-openai-api-key-here

# DashScope API Configuration (Qwen-Image)
DASHSCOPE_API_KEY=your_dashscope_api_key_here

# 创建 OSS Bucket 时选择"公共读"权限，或在 Bucket 设置中修改
ALIYUN_OSS_ACCESS_KEY_ID=your_aliyun_access_key_id_here
ALIYUN_OSS_ACCESS_KEY_SECRET=your_aliyun_access_key_secret_here
ALIYUN_OSS_BUCKET=your_oss_bucket_name
ALIYUN_OSS_REGION=oss-cn-shanghai

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
GENERATED_DIR=./generated
SKETCH_DIR=./sketches

# Allowed Image Formats (comma-separated)
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# ControlNet Configuration
CONTROLNET_PREPROCESSOR=canny
CONTROLNET_SCALE=1.0

DEFAULT_NEGATIVE_PROMPT=low quality, blurry, distorted

# Generation Configuration
GENERATION_STEPS=30
GUIDANCE_SCALE=7.5
MAX_GENERATION_TIME=120000

# Generation Mode Selection
GENERATION_MODE=qwen

# Text-to-Image Model Selection (文生图模型选择)
# Options: 'wanx-v1' (旧版) or 'wan2.5-t2i-preview' (新版，推荐)
# Default: 'wanx-v1'
TEXT2IMAGE_MODEL=wanx-v1
